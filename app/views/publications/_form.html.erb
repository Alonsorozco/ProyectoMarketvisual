<%= form_with(model: @publication , local: true) do |f| %>
    <% if @publication.errors.any? %>
        <div id = 'error_explanation'>
            <h2>Este  no se pudo crear por las siguientes razones</h2>
            <ul>
                <% @publication.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>



    <div class="container">
        <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>
    <div class="form-group">
        <%= f.label :value %>
        <%= f.text_field :value %>
    </div>
    <div class="field ">
        <%= f.label :imagen %><br />
        <%= f.file_field :image , multiple: true %>
    </div>
    
    <div class = 'actions'>
        <%= f.submit %>
    </div>
    
    
    </div>
    
<% end %>