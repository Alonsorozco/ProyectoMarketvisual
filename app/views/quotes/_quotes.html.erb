<%# card%>
<div class="container">
    <div class="row">
        <div class="col-sm pt-3">
            <%@user_quotes.each do |quote| %>
                <div class="col-12 pt-3">
                    <div class="card" style="width: 18rem;">
                        <img src="https://cdn.pixabay.com/photo/2015/04/13/13/37/audio-720589_960_720.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"> Fecha del evento: <%= quote.date %></h5>
                            <p class="card-text"> Mensage: <%= quote.message %></p>
                            <%= link_to 'Ver',quote,class:"btn btn-primary"%>
                            <%= link_to 'Editar', edit_quote_path(quote),class:"btn btn-primary" %>
                            <%= link_to 'Cancelar', quote,class:"btn btn-primary", method: :delete, data: { confirm: 'Deseas cancelar la cotizacion?' } %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>   
    </div>
</div> 








