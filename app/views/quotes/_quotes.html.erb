<%# card%>
<div class="container">
        <div class="row">
            <%@user_quotes.each do |quote| %>
                <div class="col-3 px-2 pt-3 ">
                    <div class="card" style="width: 15rem;">
                        <div class="card-body">
                            <h5 class="card-title">Fecha del evento: <%= quote.date%></h5>
                            <p class="card-text">Mensaje: <%= quote.message  %></p>
                            <%= link_to 'Ver', publication_path(quote.publication_id) ,class:"btn btn-primary"%>
                            <%= link_to 'Editar', edit_quote_path(quote),class:"btn btn-primary" %>
                            <%= link_to 'Cancelar', quote,class:"btn btn-primary", method: :delete, data: { confirm: 'Deseas cancelar la publicacion?' } %>
                        </div>
                    </div>
                </div>
            <% end %>  
        </div>
    </div> 








