<%= form_with(model: @user, remote: true) do |f| %>
    <% if @user.errors.any? %>
        <div id = 'error_explanation'>
            <h2>Este  no se pudo crear por las siguientes razones</h2>
            <ul>
                <% @user.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email %>
    </div>


    
    <div class = 'actions'>
        <%= f.submit %>
    </div>
<% end %>