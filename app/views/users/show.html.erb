



<p id="notice" class="text-center mr-5  imgdj "><%= notice %></p>
<div class="container text-center bg-dark ">
  <div class="card bg-dark ">
  <img src="https://cdn.pixabay.com/photo/2017/07/31/23/38/video-2562034_960_720.jpg"class="card-img" alt="...">
  
  <div class="card-img-overlay">
  <a class="navbar-brand" href="#"><%=image_tag current_user.avatar,:class =>"img-fluid imgdj rounded-circle img_navbar perfilimg border border-primary "%><%root_path%><a>

  <ul class="list-group "id='user'>
    <li class="list-group-item">Nombre:  <%= current_user.name %></li>
    <li class="list-group-item">Correo:  <%= current_user.email %></li>
    <li class="list-group-item"> Publicaciones:  <%= current_user.publications.count%></li>
    <li class="list-group-item"> Cotizaciones:  <%= current_user.quotes.count%></li>
  </ul>
  <div id='new_bookmark_btn' class="py-3">
      <%= link_to 'Editar', edit_user_path(current_user.id), class: 'btn btn-primary', remote: true%>
  </div>
</div>  
  </div>
</div>






